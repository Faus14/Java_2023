CREATE DATABASE javaMarket;

USE javaMarket;

CREATE TABLE Product (
  id INT NOT NULL AUTO_INCREMENT,
  name VARCHAR(100) NOT NULL,
  description VARCHAR(255) NOT NULL,
  price DOUBLE NOT NULL,
  stock INT NOT NULL,
  shippingIncluded BOOLEAN NOT NULL,
  PRIMARY KEY (id)
);

INSERT INTO Product (name, description, price, stock, shippingIncluded)
VALUES ('Product 1', 'Manzana', 10.5, 100, true);

INSERT INTO Product (name, description, price, stock, shippingIncluded)
VALUES ('Product 2', 'Banana', 25.0, 50, false);

INSERT INTO Product (name, description, price, stock, shippingIncluded)
VALUES ('Product 3', 'Pera', 5.99, 200, true);
